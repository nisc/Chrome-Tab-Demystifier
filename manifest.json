{
  "name": "Tab Demystifier",
  "version": "0.2",
  "description": "Shows what has opened a page. Useful if you can no longer remember why you've opened a certain tab.",
  "browser_action": {
    "default_icon": "icons/icon_off_19.jpg",
    "default_title": "Sorry, can't help you.",
    "default_popup": ""
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "history"
  ],
  "icons": {
    "16": "icons/icon_16.jpg",
    "48": "icons/icon_48.jpg",
    "128": "icons/icon_128.jpg"
  },
  "content_security_policy": "default-src 'self' 'unsafe-inline' "
}
